#!/usr/bin/env bash
# Script to configure Nginx server with a custom 404 page

# Update the package list to ensure we have the latest package information
sudo apt-get update

# Install Nginx using the apt-get command with -y option to automatically confirm installation
sudo apt-get install -y nginx

# Create a custom 404 error page with the desired content
echo "Ceci n'est pas une page" | sudo tee /usr/share/nginx/html/404.html > /dev/null

# Create a configuration file to handle 404 errors
echo "server {
    listen 80;
    server_name _;

    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }

    # ... (other server configuration options)
}" | sudo tee /etc/nginx/sites-available/custom_404 > /dev/null

# Create a symbolic link to enable the site
sudo ln -s /etc/nginx/sites-available/custom_404 /etc/nginx/sites-enabled/

# Test Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart

# Exit with a success message
echo "Nginx custom 404 page configured successfully!"
